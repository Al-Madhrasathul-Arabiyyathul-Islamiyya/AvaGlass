# Documents
*.md         text
*.txt        text
*.doc        diff=astextplain
*.DOC        diff=astextplain
*.docx       diff=astextplain
*.DOCX       diff=astextplain
*.pdf        diff=astextplain
*.PDF        diff=astextplain
*.rtf        diff=astextplain
*.RTF        diff=astextplain

# Linguist language overrides
*.cs         linguist-language=C#
*.axaml      linguist-language=XML

# Exclude build output and dependencies from language statistics
bin/         linguist-generated=true
obj/         linguist-generated=true
**/bin/      linguist-generated=true
**/obj/      linguist-generated=true
packages/    linguist-vendored=true

